"syn clear
set foldmethod=syntax
syn sync fromstart
"syn keyword pystoff def class

syn match pyfold0 "^\(def\|class\).*\(\n*\s\s*.*\)*" transparent fold
syn match pyfold1 "^\s\(def\|class\).*\(\n*\s\s\s*.*\)*" transparent fold
syn match pyfold2 "^\s\s\(def\|class\).*\(\n*\s\s\s\s*.*\)*" transparent fold
syn match pyfold3 "^\s\s\s\(def\|class\).*\(\n*\s\s\s\s\s*.*\)*" transparent fold
syn match pyfold4 "^\s\s\s\s\(def\|class\).*\(\n*\s\s\s\s\s\s*.*\)*" transparent fold
syn match pyfold5 "^\s\s\s\s\s\(def\|class\).*\(\n*\s\s\s\s\s\s\s*.*\)*" transparent fold
syn match pyfold6 "^\s\s\s\s\s\s\(def\|class\).*\(\n*\s\s\s\s\s\s\s\s*.*\)*" transparent fold
syn match pyfold7 "^\s\s\s\s\s\s\s\(def\|class\).*\(\n*\s\s\s\s\s\s\s\s\s*.*\)*" transparent fold
